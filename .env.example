# DigitalBlock Exchange Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:port/database_name
NODE_ENV=production

# Application Configuration
PORT=10000
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# XUMM API Configuration
XUMM_API_KEY=your_xumm_api_key
XUMM_API_SECRET=your_xumm_api_secret

# XRPL Network Configuration
# Options: 'testnet' or 'mainnet'
XRPL_NETWORK=testnet

# CORS Configuration
FRONTEND_URL=https://your-frontend.onrender.com
ADMIN_URL=https://your-admin.onrender.com

# AWS S3 Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket

# Additional API Keys (if needed)
# Add other API keys as required

# Routing Engine Configuration
ROUTING_ENGINE_V1=true
ROUTING_ENGINE_LOG=info
ROUTING_THRESHOLD_LARGE_USD=1000
ROUTING_THRESHOLD_SPLIT_USD=25000

# UBAL (Unified Blockchain Abstraction Layer) Configuration
# RPC URLs for blockchain networks (REQUIRED for blockchain functionality)
# XRP Ledger
UBAL_XRP_RPC_URL=wss://xrplcluster.com
# Stellar Network
UBAL_XLM_RPC_URL=https://horizon.stellar.org
# XDC Network
UBAL_XDC_RPC_URL=https://rpc.xinfin.network
# Bitcoin Network
UBAL_BTC_RPC_URL=https://blockstream.info/api

# Optional: Skip blockchain initialization (set to 'true' to disable)
# DBX_SKIP_CHAIN_INIT=false
